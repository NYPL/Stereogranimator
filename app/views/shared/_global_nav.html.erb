	<div id="header">
		<h1><a href="/"><span class="visuallyhidden">STEREOGRANIMATOR</span></a></h1>
		<ul id="mainNav">
			<li class="grid_2 alpha <%=  "active" if controller_name ==  'animations' %>"><%= link_to "CREATE", "/create" %></li>
			<li class="grid_2 <%=  "active" if controller_name ==  'gallery' %>"><%= link_to "GALLERY", gallery_path %></li>
