		</ul>
		<div id="flickr_logout">
<% if cookies[:flickr_username] != nil && cookies[:flickr_username] != "" %>
			<%= link_to "Disconnect from Flickr", "/logoutflickr" %>
<% else %>
			<%= link_to "Connect to Flickr", @flickr_url %>
<% end %>
		</div>
	</div>
<% if current_user %>
<%= link_to "Logout", :logout%>
<% end %>
