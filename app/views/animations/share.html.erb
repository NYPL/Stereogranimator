			<h2>CONGRATULATIONS!</h2>

			<p>Your <%= @animation.mode == "GIF" ? "animated GIF" : "anaglyph" %> has been created!</p>
			
			<div class="create"><%= link_to "CREATE ANOTHER ONE!", "/choose", :class => 'genericButtonLink' %></div>

<% @sharetype = "created" %>

<%= render "shared/share", :locals => {:animation => @animation, :sharetype => @sharetype} %>
			
			</div>
		</div>
